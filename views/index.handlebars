<div class="jumbotron">
    <h1 class="display-4">Eat Da Burger!</h1>
</div>
          
<div class="container">
    <div class="row">
        <div class="col-sm">

            <h2 class="burgToEat">Burgers to be devoured!</h2>
            <ul class="notEaten">
                {{#each burger_name}}
                {{#unless this.devoured}}

                <div class="card">
                    <div class="card-body">
                        <h2 class="burgerName">{{this.burger_name}}</h2>
                        <p><button class="devour" data-id={{this.id}}>Devour</button></p>
                    </div>
                </div>
                {{/unless}}
                {{/each}}
            </ul>

        </div>
        <div class="col-sm">
            <h2 class="add">Create a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burgs"></label>
                    <input type="text" id="burgs" name="name">
                </div>
                <button type="submit" class="submit">Submit!</button>
            </form>
        </div>
        <div class="col-sm">
            <h2 class="ateBurgs"> Burgers you devoured!</h2>

            <ul class="devoured">
                {{#each burger_name}}
                {{#if this.devoured}}
                <div class="card">
                    <div class="card-body">
                        <h2 class="burgerName">{{this.burger_name}}</h2>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
